<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="at.tugraz.embsec.fastcalc.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/tvFirstSummand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="s1"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvPlusSign"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tvSecondSummand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="s2"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginStart="14dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="55dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tvPlusSign" />

    <TextView
        android:id="@+id/tvPlusSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvSecondSummand"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/tvFirstSummand" />

    <TextView
        android:id="@+id/tvEqualSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/tvPlusSign"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/tvPlusSign"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/tvPlusSign" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="result"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginStart="14dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvEqualSign"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/tvEqualSign" />

    <Button
        android:id="@+id/btnCheckEquation"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:onClick="onCheckClick"
        android:text="Check"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="30dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="104dp"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/gridButtons"
        android:layout_width="0dp"
        android:layout_height="278dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="53dp"
        android:columnCount="3"
        android:rowCount="4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCheckEquation"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <Button
            android:id="@+id/btn2"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_column="1"
            android:layout_row="0"
            android:text="2" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_column="2"
            android:layout_row="0"
            android:text="3" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="0"
            android:text="1" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="1"
            android:text="4" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_column="1"
            android:layout_row="1"
            android:text="5" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_column="2"
            android:layout_row="1"
            android:text="6" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="2"
            android:text="7" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_column="1"
            android:layout_row="2"
            android:text="8" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_column="2"
            android:layout_row="2"
            android:text="9" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_column="1"
            android:layout_row="3"
            android:text="0" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_column="2"
            android:layout_row="3"
            android:text="del" />
    </GridLayout>

    <TextView
        android:id="@+id/tv_accdata"
        android:layout_width="92dp"
        android:layout_height="26dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/tvFirstSummand"
        android:layout_marginEnd="101dp"
        android:layout_marginTop="7dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="17dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.26"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintRight_toRightOf="@+id/tv_gyrodata" />

    <TextView
        android:id="@+id/tv_gyrodata"
        android:layout_width="112dp"
        android:layout_height="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/tv_lightdata"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_accdata"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.475" />

    <TextView
        android:id="@+id/tv_lightdata"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="7dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_accdata"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/tv_accdata"
        app:layout_constraintLeft_toRightOf="@+id/tv_gyrodata"
        app:layout_constraintHorizontal_bias="0.913"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>
